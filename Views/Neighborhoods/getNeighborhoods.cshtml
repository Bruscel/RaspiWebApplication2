
@{
    ViewData["Title"] = "Get Neighborhoods";
}

<h1>Neighborhoods</h1>


<div class="table-responsive" style="padding-bottom: 60px;">

    <table id="hoods" class="table table-condensed align-middle table-sm table-bordered table-hover" style="font-size: 8.5px;">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Latitude</th>
                <th scope="col">Longitude</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip</th>
                <th scope="col">Radius</th>
            </tr>
        </thead>

        <tbody id="tbodyid">
        </tbody>
    </table>
</div>
<br />
<div>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-outline-secondary float-right" data-toggle="modal" data-target="#exampleModalCenter">
        Add Neighborhood
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="getNeighborhoods" asp-controller="Neighborhoods" method="post">
                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="hood_name">Neighnorhood Name</label>
                                <input type="text" class="form-control" name="neighborhood_name" placeholder="Neighnorhood Name" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="latitude">Latitude</label>
                                <input type="text" class="form-control" name="latitude" placeholder="Latitude" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="longitude">Longitude</label>
                                <input type="text" class="form-control" name="longitude" placeholder="Longitude" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="validationServer03">City</label>
                                <input type="text" class="form-control" name="city" placeholder="City" required>
                                <div class="invalid-feedback">
                                    Please provide a valid city.
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="validationServer04">State</label>
                                <input type="text" class="form-control" name="state" placeholder="State" required>
                                <div class="invalid-feedback">
                                    Please provide a valid state.
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="validationServer05">Zip</label>
                                <input type="text" class="form-control" name="zip" placeholder="Zip" required>
                                <div class="invalid-feedback">
                                    Please provide a valid zip.
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="radius">Radius in Feet</label>
                                <input type="text" class="form-control" name="feet_radius" placeholder="Radius in Feet" required>
                                <div class="invalid-feedback">
                                    Please provide a valid radius.
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button class="btn btn-primary" type="submit">Save</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <br />


    <form class="float-left" asp-action="fileLoader" asp-controller="Neighborhoods" method="post" enctype="multipart/form-data">
        <input class="btn btn-outline-secondary" type="file" name="file" />
        <button class="btn btn-outline-secondary" type="submit">Upload</button>
    </form>
</div>



@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            All();
        });

        function All() {
            $('#hoods').DataTable().destroy();
            $("#hoods").DataTable({

                dom: 'B<"clear">lfrtip',
                /*responsive: true,*/
                buttons: {
                    name: 'primary',
                    buttons: ['copy', 'pdf', 'csv']
                },

                //dom: 'l<"toolbar">frtip',
                //preDrawCallback: function () {
                //    $("div.toolbar")
                //        .html('<button id="active-btn" class="btn btn-outline-dark sm" style="float:left; line-height: 1.19; margin-left: 10px;" onclick="All()">All</button>');
                //},
                "ajax": {
                    url: "/Neighborhoods/FetchData",
                    dataSrc: "neighborhoods",
                    type: "GET",
                    datatype: "json",
                    order: [[1, 'asc']]
                },

                "columns": [
                    {
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "neighborhood_name" },
                    { "data": "latitude" },
                    { "data": "longitude" },
                    { "data": "city" },
                    { "data": "state" },
                    { "data": "zip" },
                    { "data": "feet_radius" }
                ]

            });

        }
    </script>
}